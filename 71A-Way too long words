#include<bits/stdc++.h>
using namespace std;
int main()
{
    string s;
    int a,t;
    cin>>t;
    while(t>0)
    {
        cin>>s;
        a=s.length();
        if(a>10)
        {
            cout<<s[0]<<a-2<<s[a-1]<<endl;
        }
        else
        {
            cout<<s<<endl;
        }
        t--;
    }


    return 0;
}
